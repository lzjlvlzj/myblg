   div.btn-group
      a(class="btn btn-default dropdown-toggle", data-toggle="dropdown" ,data-original-title="Font Size")
         i.fa.fa-text-height
         b.caret
      ul.dropdown-menu
         li
            a(data-edit="fontSize 5",class="fs-Five") Huge
         li
            a(data-edit="fontSize 3",class="fs-Three") Normal
         li
            a(data-edit="fontSize 1",class="fs-One") Small
   div.btn-group
      a(class="btn btn-default", data-edit="bold", data-original-title="Bold (Ctrl/Cmd+B)")
         i.fa.fa-bold
      a(class="btn btn-default", data-edit="italic", data-original-title="Italic (Ctrl/Cmd+I)")
         i.fa.fa-italic
      a(class="btn btn-default", data-edit="Strikethrough", data-original-title="Strikethrough")
         i.fa.fa-strikethrough
      a(class="btn btn-default", data-edit="underline", data-original-title="Underline (Ctrl/Cmd+U)")
         i.fa.fa-underline
   div.btn-group
      a(title='Hyperlink' class='btn btn-default dropdown-toggle',data-toggle="dropdown")
         i.fa.fa-link
      div.dropdown-menu.input-append
         input(placeholder="URL",type="text",data-edit="createLink")
         button(type='button' class='btn') add


   div.btn-group
      a(id="pictureBtn",  class="btn btn-default", data-original-title="Insert picture (or just drag &amp; drop)")
         i.fa.fa-picture-o
      input(type="file" data-edit="insertImage" data-target="#pictureBtn" data-role="magic-overlay" style="opacity: 0; position: absolute; top: 0px; left: 0px; width: 41px; height: 30px;")










